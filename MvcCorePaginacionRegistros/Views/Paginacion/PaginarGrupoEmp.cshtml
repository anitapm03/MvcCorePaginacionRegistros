@model List<Empleado>

@{
    ViewData["Title"] = "PaginarGrupo";
}

@{
    int numeroRegistros = (int)ViewData["REGISTROS"];
    int numeroPagina = 1;
}


<h1>Paginar Grupo Empleado</h1>

<ul class="list-group list-group-horizontal">
    @for (int i = 1; i <= numeroRegistros; i += 2)
    {
        <li class="list-group-item list-group-item-danger">
            <a asp-controller="Paginacion"
               asp-action="PaginarGrupoEmp"
               asp-route-posicion="@i">
                Página @numeroPagina
            </a>
        </li>
        numeroPagina += 1;
    }
</ul>

<table class="table table-bordered table-dark">
    <thead>
        <tr>

            <th>ID</th>
            <th>APELLIDO</th>
            <th>OFICIO</th>
            <th>SALARIO</th>
            <th>NUM DEPT</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.IdEmpleado</td>
                <td>@item.Apellido</td>
                <td>@item.Oficio</td>
                <td>@item.Salario</td>
                <td>@item.IdDepartamento</td>
            </tr>
        }
    </tbody>
</table>